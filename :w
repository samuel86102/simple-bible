  <body>
	<div class="container p-5">
	<div class="text-center">
    <h1>Simple Bible</h1>
	</div>
	<div class="row m-3">

		<label for="book">Choose Book:</label>
		<select name="book" id="book">
		</select>
	</div>

	<div class="row m-3">

		<label for="chapter">Choose Chapter:</label>
		<select name="chapter" id="chapter">
		</select>
	</div>

	<div class="row m-3">

		<button id="btn" class="btn btn-primary">GO</button>
	</div>



<div class="card shadow p-3 mb-5 rounded">
  <div class="card-body">
    <h4 class="card-title">Card title</h4>
    <p class="card-text" id="verse"></p>



<table class="table">
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>Mark</td>
    </tr>
  </tbody>
</table>

  </div>
</div>


	</div>

	<script>

		var bible,book;

		var xmlhttp = new XMLHttpRequest();
		xmlhttp.onreadystatechange = function() {
			if (this.readyState == 4 && this.status == 200) {
				myFunction(this);
			}
		};
		xmlhttp.open("GET", "zh_cuv.xml", true);
		xmlhttp.send();

		function myFunction(xml) {

			var x, i, xmlDoc, txt;
			var bk_i=1, ch_i=1, vs_i=10;
			xmlDoc = xml.responseXML;
			x = xmlDoc.getElementsByTagName("bible");
			bible = x[0];
			//console.log(bible.childNodes[bk_i].childNodes[ch_i].childNodes[vs_i].textContent)
			//document.getElementById("demo").innerHTML = txt;

			book = bible.childNodes;
			var bookSelect = document.getElementById('book');


			for (var i = 0; i<= book.length; i+=1) {
				var opt = document.createElement('option');
				book_name = book[i].getAttribute('n');
				opt.value = book_name;
				opt.innerHTML = book_name;
				bookSelect.appendChild(opt);
			}
		}

		var bookElement = document.getElementById("book");
		var chapterElement = document.getElementById('chapter');
		var bookIndex,chapterIndex;
		var bookLength,chapterLength;
		var preLength;
		bookElement.addEventListener("change", selectBook);
		function selectBook() {

			for(var i=bookLength-1 ;i>=0;i-=1){
				chapterElement.remove(i);
			}


			bookIndex = bookElement.selectedIndex;
			bookLength = book[bookIndex].childNodes.length
			for (var i = 0; i< bookLength; i+=1) {
				var opt = document.createElement('option');
				opt.value = i+1;
				opt.innerHTML = i+1;
				chapterElement.appendChild(opt);
			}
			preLength = bookLength;


		}

		chapterElement.addEventListener("change", selectChapter);
		function selectChapter(){
			chapterIndex = chapterElement.selectedIndex;
			chapterLength = book[bookIndex].childNodes[chapterIndex].childNodes.length;
		}


		var btnElement = document.getElementById("btn");
		btnElement.addEventListener("click", clickBtn);
		function clickBtn(){
			var txt="";
			for (var i=0; i<chapterLength ;i+=1){
				txt += i+1 + " " + bible.childNodes[bookIndex].childNodes[chapterIndex].childNodes[i].textContent + "<br>";
			}
			document.getElementById("verse").innerHTML = txt;
		}



	</script>





